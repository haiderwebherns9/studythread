    <?php 
	 if(isset($_GET['job_id'])){
		global $wpdb;
		$jbid=$_GET['job_id'];
        $query = "
		SELECT * FROM ".$wpdb->prefix."posts
		WHERE post_type = 'job'
		AND ID =".$jbid
		;
		$res_job=$wpdb->get_row($query, ARRAY_A);		
		//print_r($res_job);
	   $job_title=  get_post_meta($jbid, 'job_title',true); 
	   $job_price = get_post_meta($jbid, 'price',true); 
	  
